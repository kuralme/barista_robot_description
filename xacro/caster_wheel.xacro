<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:macro name="caster_wheel" params="parent xyz">

  <!-- caster_yaw_joint -->
  <joint name="${prefix}caster_yaw_joint" type="continuous">
    <origin rpy="0 0 0" xyz="${xyz}"/>
    <parent link="${parent}"/>
    <child link="${prefix}caster_yaw_link"/>
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" velocity="100.0" />
    <dynamics damping="0.0" friction="0.1"/>
  </joint>
  <link name="${prefix}caster_yaw_link">
    <visual>
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      <geometry>          
        <cylinder length="0.001" radius="0.0352"/>
      </geometry>
      <material name="Gazebo/Blue">
          <color rgba="0.0 0.0 1.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.001" radius="0.0352"/>
      </geometry>
    </collision>
    <inertial>
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
        <mass value="0.05"/>
        <inertia ixx="5.175e-05" ixy="0.0" ixz="0.0" iyy="5.175e-05" iyz="0.0" izz="3.097e-05"/>
    </inertial>
  </link>

  <!-- caster_roll_joint -->
  <joint name="${prefix}caster_roll_joint" type="continuous">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="${prefix}caster_yaw_link"/>
    <child link="${prefix}caster_roll_link"/>
    <axis xyz="1 0 0"/>
    <limit effort="1000.0" velocity="100.0" />
    <dynamics damping="0.0" friction="0.1"/>
  </joint>
  <link name="${prefix}caster_roll_link">
    <visual>
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.001" radius="0.0352"/>
      </geometry>
      <material name="Gazebo/Red">
          <color rgba="1.0 0.0 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.001" radius="0.0352"/>
      </geometry>
    </collision>
    <inertial>
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
        <mass value="0.05"/>
        <inertia ixx="5.175e-05" ixy="0.0" ixz="0.0" iyy="5.175e-05" iyz="0.0" izz="3.097e-05"/>
    </inertial>
  </link>

  <!-- caster_pitch_joint -->
  <joint name="${prefix}caster_pitch_joint" type="continuous">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="${prefix}caster_roll_link"/>
    <child link="${prefix}caster_pitch_link"/>
    <axis xyz="0 1 0"/>
    <limit effort="1000.0" velocity="100.0" />
    <dynamics damping="0.0" friction="0.1"/>
  </joint>
  <link name="${prefix}caster_pitch_link">
    <visual>
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.0352"/>
      </geometry>
      <material name="Gazebo/Green">
          <color rgba="0.0 0.8 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.0352"/>
      </geometry>
    </collision>
    <inertial>
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
        <mass value="1."/>
        <inertia ixx="0.0004952" ixy="0.0" ixz="0.0" iyy="0.0004952" iyz="0.0" izz="0.0004952"/>
    </inertial>
  </link>

</xacro:macro>
</robot>
